[user]
	name = Kahlil Hodgson
	email = tartansandal@users.noreply.github.com

[init]
        defaultBranch = main

[help]
        autocorrect = prompt

[core]
        excludesfile = ~/.gitignore
        repositoryformatversion = 0
        filemode = true
        bare = false
        logallrefupdates = true

[push]
        default = simple
        autoSetupRemote = true
        followTags = true
[fetch]
        prune = true
        pruneTags = true
        all = true

[pull]
        rebase = true

[commit]
        verbose = true

[rerere]
        enabled = true
        autoupdate = true

[submodule]
        recurse = true

[filter "lfs"]
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
        process = git-lfs filter-process
        required = true

[rebase]
        autoSquash = true
        autoStash = true
        updateRefs = true

[log]
        abbrevCommit = true

[column]
        ui = auto

[branch]
        sort = -committerdate

[tag]
        sort = version:refname

[showbranch]
        default = --topo-order

[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true

; Make colors work well with catppuccin and lazygit
[color]
        branch = auto
        diff = auto
        status = auto
        ui = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow
        frag = magenta
        old = red
        new = green

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

