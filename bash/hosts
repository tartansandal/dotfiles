-git-socks () {
    ssh -NfD localhost:5000 git.internal.ip-echelon.com
}

-mysql-master () {
    local target=${1:-ipechelon}
    mysql --login-path=master $target
}

-mysql-slave () {
    local target=${1:-ipechelon}
    mysql --login-path=readonly $target
}

## machine shortcuts
for target in      \
    jason          \
	control        \
    turing         \
	turing-external
do
    eval -- "-$target () { ssh \$* $target; }"
done
