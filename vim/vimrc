"> MRU:-------------------------------------------------------------------{{{2

let MRU_Max_Entries = 20
let MRU_Auto_Close = 1
let MRU_Add_Menu = 1

function! MyMRU ()
    if bufname("%") == '__MRU_Files__'
        normal q
    else
        " skip to prev window if current buffer has a type
        if &buftype != ''
            wincmd p
        endif
        MRU
        setlocal cursorline
   endif
endfunction

