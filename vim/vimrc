" directories first
let NERDTreeSortOrder = ['\/$', '*', '\.swp$',  '\.bak$', '\~$']
" let NERDTreeSortOrder = ['*', '\.swp$',  '\.bak$', '\~$']
let NERDTreeWinPos = 'right'

function! MyNERDTreeToggle ()
    if bufname("%") == '__MRU_Files__' || bufname("%") == '[BufExplorer]'
        normal q
    endif
    silent! TagbarClose
    silent NERDTreeToggle
endfunction


